<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.otiasj.memoryLogger.amltester"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:name="com.otiasj.memoryLogger.test.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.otiasj.memoryLogger.test.MyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<activity android:name="com.otiasj.memoryLogger.test.SecondActivity"/>
		<activity android:name="com.otiasj.memoryLogger.test.ThirdActivity"/>
		<activity android:name="com.otiasj.memoryLogger.test.FourthActivity" />
		<activity android:name="com.otiasj.memoryLogger.test.FifthActivity" />
    </application>

</manifest>
